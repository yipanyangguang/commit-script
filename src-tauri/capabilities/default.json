{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "shell:allow-open",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    {
      "identifier": "fs:allow-write-file",
      "allow": [{ "path": "$HOME/**" }, { "path": "$DOWNLOAD/**" }, { "path": "$DESKTOP/**" }, { "path": "$DOCUMENT/**" }]
    }
  ]
}
